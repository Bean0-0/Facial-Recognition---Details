# I-XRAY Backend Configuration
# Copy this file to .env

# LLM Configuration (RECOMMENDED: Use Gemini - it's FREE!)
LLM_PROVIDER=gemini  # Options: gemini (FREE), openai, anthropic
GEMINI_API_KEY=  # Get free at https://makersuite.google.com/app/apikey
OPENAI_API_KEY=  # Optional
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=  # Optional
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Note: Reverse face search services require paid subscriptions
# The system will use web scraping for most sources instead
# For free reverse image search, use Google Images or TinEye manually
PIMEYES_API_KEY=
FACECHECK_API_KEY=

# Note: Google and Bing searches now use web scraping (no API keys needed)
# These are optional and only needed if you want to use official APIs
GOOGLE_API_KEY=
GOOGLE_CSE_ID=
BING_API_KEY=

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
